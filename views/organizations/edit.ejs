<h4>Organization Detail <a class="btn btn-secondary btn-sm" href="/organizations">Back</a></h4>
<form action="/organizations/<%=organization.id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" aria-describedby="nameHelp"  value="<%=organization.name%>"" required />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea maxlength="100" class="form-control" id="description" name="description" rows="3" value="<%=organization.description%>"></textarea>
    </div> 
    <input type="submit" class="btn btn-primary btn-sm" value="Save">
    <a class="btn btn-secondary btn-sm" href="/organizations/<%=organization.id%>/contacts/new">Add Contacts</a>
    <a class="btn btn-secondary btn-sm" href="/organizations/<%=organization.id%>/contacts/remove">Remove Contacts</a>
<form>

<% if (organization.contacts.length > 0) { %>
    <fieldset class="scheduler-border">
        <legend class="scheduler-border">Contacts</legend>
    
        <% if (organization.contacts.length > 0) { %>
            <ul>
            <% organization.contacts.forEach(contact => { %>
                <li>
                    <%= contact.firstName%> <%=contact.lastName %> (Phone: <%=contact.phone%>) 
                </li>
            <% }) %>
            </ul>
        <% } %>
    
    </fieldset>
<% } %>