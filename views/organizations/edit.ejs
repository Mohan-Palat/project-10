<h3>Organization Detail</h3>
<form action="/organizations/<%=organization.id%>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" type="text" name="name" aria-describedby="nameHelp"  value="<%=organization.name%>"" required />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea maxlength="100" class="form-control" id="description" name="description" rows="3" value="<%=organization.description%>"></textarea>
    </div> 
    <input type="submit" class="btn btn-primary" value="Save">
    <a class="btn btn-primary" href="/organizations">Back</a>
    <a class="btn btn-primary" href="/organizations/<%=organization.id%>/contacts/new">Add Contacts</a>
    <a class="btn btn-primary" href="/organizations/<%=organization.id%>/contacts/remove">Remove Contacts</a>
<form>

<% if (organization.contacts.length > 0) { %>
    <h4>Contacts</h4>
    <ul>
    <% for (let contact of organization.contacts ) { %>
        <li>
            <%= contact.firstName %>
        </li>
    <% } %>
    </ul>
<% } %>