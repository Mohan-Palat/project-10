<h4><%=organization.name%></h4>
<form action="/organizations/<%=organization.id%>/contacts?_method=PUT" method="POST">
    <% contacts.forEach(contact => { %>
        <input type="checkbox" name="contacts" value="<%=contact.id%>" />
        <label for="<%= contact.firstName %>"><%= contact.firstName %>  <%= contact.lastName %></label><br />
    <% })%>
    <input class="btn btn-primary btn-sm" type="submit" value="Add Contacts" />
    <a class="btn btn-secondary btn-sm" href="/organizations">Back</a>
<form>
<% if (organization.contacts.length > 0) { %>
    <fieldset class="scheduler-border">
        <legend class="scheduler-border">Contacts</legend>
    
        <% if (organization.contacts.length > 0) { %>
            <ul>
            <% organization.contacts.forEach(contact => { %>
                <li>
                    <%= contact.firstName%> <%=contact.lastName %> (Phone: <%=contact.phone%>) 
                </li>
            <% }) %>
            </ul>
        <% } %>
    
    </fieldset>
<% } %>

